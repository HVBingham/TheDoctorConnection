@model IEnumerable<PrescriptionCapstone.Models.Patient>

@{
    ViewBag.Title = "Index";
}
<h2>Patients</h2>

@using (Html.BeginForm("CreateLogin", "Doctors"))
{
    <button type="submit">Add New Patient</button>
}

<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Patients", new { id = item.Id }, null) |
                @Html.ActionLink("Details", "Details", "Patients", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", "Patients", new { id = item.Id })
            </td>
        </tr>
    }

</table>
