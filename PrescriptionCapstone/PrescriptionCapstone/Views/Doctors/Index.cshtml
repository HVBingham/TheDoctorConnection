@model IEnumerable<PrescriptionCapstone.Models.Patient>

@{
    ViewBag.Title = "Index";
}
@*changed name from view to index*@
<h2>View</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        <input type="button" value="Prescription" onclick="location.href='@Url.Action("PrescriptionEmail", "Patients", new { Id=item.Id})'"
    </td>
    <td>
        <input type="button" value="Refill" onclick="location.href='@Url.Action("RefillEmail", "Patients", new { Id=item.Id})'"
    </td>
    
</tr>
}

</table>
